# ============================================
# Configuración Apache - Somos Tiendi (Multi-tenant)
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ==========================================
    # PRIORIDAD 0: Proteger archivos sensibles
    # ==========================================
    RewriteRule ^helpers/ - [F,L]
    RewriteRule ^store-router\.php$ - [F,L]
    RewriteRule ^platform-config\.php$ - [F,L]
    RewriteRule ^config\.php$ - [F,L]
    RewriteRule ^config\.local\.php$ - [F,L]
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^\.csrf_secret$ - [F,L]

    # ==========================================
    # PRIORIDAD 1: Raíz = Landing de Somos Tiendi
    # ==========================================
    RewriteRule ^$ platform/index.php [L]

    # ==========================================
    # PRIORIDAD 2: Platform pages (login, register, dashboard, superadmin)
    # ==========================================
    RewriteCond %{REQUEST_URI} ^/platform/
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    RewriteCond %{REQUEST_URI} ^/platform/
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    # Platform con index.php implícito para directorios
    RewriteCond %{REQUEST_URI} ^/platform/(.+)/$
    RewriteCond %{DOCUMENT_ROOT}/platform/$1/index.php -f
    RewriteRule ^platform/(.+)/$ platform/$1/index.php [L]
    RewriteRule ^platform/$ platform/index.php [L]

    # ==========================================
    # PRIORIDAD 3: Assets compartidos (servir directo desde raíz)
    # ==========================================
    # JS, CSS compilados de Astro, fuentes
    RewriteCond %{REQUEST_URI} ^/(js|_astro|css|fonts)/
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Archivos estáticos en raíz
    RewriteCond %{REQUEST_URI} ^/(global\.css|favicon\.svg|manifest\.json|sw\.js|offline\.html|image-config\.json)$
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Imágenes compartidas en /images/ (dev: public/images, prod: /images/)
    RewriteCond %{REQUEST_URI} ^/images/
    RewriteCond %{DOCUMENT_ROOT}/images -d
    RewriteRule ^ - [L]
    RewriteCond %{REQUEST_URI} ^/images/
    RewriteCond %{DOCUMENT_ROOT}/images !-d
    RewriteRule ^images/(.*)$ public/images/$1 [L]

    # ==========================================
    # PRIORIDAD 4: Store router — /{slug}/...
    # ==========================================
    # Solo matchea slugs válidos (empieza con letra/numero, solo letras, numeros, guiones)
    # Excluye rutas que NO son slugs de tienda
    RewriteCond %{REQUEST_URI} !^/(platform|js|_astro|css|fonts|images|api|admin|helpers|cron|scripts|placeholder)/
    RewriteCond %{REQUEST_URI} !^/[^/]+\.(php|html|css|js|json|svg|ico|txt|xml|webmanifest)$
    RewriteRule ^([a-z0-9][a-z0-9\-]{1,98})/(.+)$ store-router.php?_slug=$1&_path=$2 [QSA,L]

    RewriteCond %{REQUEST_URI} !^/(platform|js|_astro|css|fonts|images|api|admin|helpers|cron|scripts|placeholder)/
    RewriteCond %{REQUEST_URI} !^/[^/]+\.(php|html|css|js|json|svg|ico|txt|xml|webmanifest)$
    RewriteRule ^([a-z0-9][a-z0-9\-]{1,98})/?$ store-router.php?_slug=$1&_path= [QSA,L]
</IfModule>

# Proteger archivos sensibles (acceso directo)
<FilesMatch "^(config|platform-config|db|auth|upload|slugify|cache-bust|security|store-context|superadmin|platform-auth|platform-db)\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Headers de seguridad
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Configuración PHP
<IfModule mod_php7.c>
    php_value upload_max_filesize 5M
    php_value post_max_size 5M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# NO cachear CSS/JS con query string v=
<IfModule mod_headers.c>
    <IfModule mod_rewrite.c>
        RewriteCond %{QUERY_STRING} v=
        RewriteRule \.(css|js)$ - [E=NO_CACHE:1]
    </IfModule>
    Header set Cache-Control "no-cache, no-store, must-revalidate" env=NO_CACHE
    Header set Pragma "no-cache" env=NO_CACHE
    Header set Expires "0" env=NO_CACHE
</IfModule>
