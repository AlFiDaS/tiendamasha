---
import Layout from '../layouts/Layout.astro';
import ProductSearch from '../components/ProductSearch.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import InfoVelas from '../components/InfoVelas.astro';
---

<Layout>
  <Breadcrumb items={[
    { text: "Inicio", href: "/" },
    { text: "Productos" }
  ]} />

  <section class="catalogo">
    <div class="container">
      <div class="section-header">
        <h1 id="category-title">Cargando...</h1>
      </div>
      
      <!-- Componente de b칰squeda -->
      <ProductSearch />
      
      <!-- Contenedor para productos din치micos desde la BD -->
      <div class="grid products-grid">
        <!-- Los productos se cargar치n aqu칤 autom치ticamente desde la API -->
      </div>
    </div>
  </section>

  <InfoVelas />

  <script is:inline>
  (function() {
    async function loadCategoryInfo() {
      try {
        const response = await fetch('/api/categories.php');
        const data = await response.json();
        const titleEl = document.getElementById('category-title');
        if (data.success && data.categories && titleEl) {
          const category = data.categories.find(function(c) { return c.slug === 'productos'; });
          if (category) {
            titleEl.textContent = category.catalog_title || ('Cat치logo de ' + category.name);
          } else {
            titleEl.textContent = 'Cat치logo de productos';
          }
        } else if (titleEl) {
          titleEl.textContent = 'Cat치logo de productos';
        }
      } catch (e) {
        var el = document.getElementById('category-title');
        if (el) el.textContent = 'Cat치logo de productos';
      }
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadCategoryInfo);
    } else {
      loadCategoryInfo();
    }
  })();
  </script>

  <style>
    .catalogo {
      padding: var(--space-lg) 0;
      background: linear-gradient(135deg, var(--surface-light) 0%, #fff 100%);
    }

    .section-header {
      text-align: center;
      margin-bottom: var(--space-lg);
    }

    .section-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: var(--space-sm);
      font-family: 'Playfair Display', serif;
    }

    .section-header p {
      font-size: var(--font-size-lg);
      color: var(--text-secondary);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 var(--space-md);
    }

    /* 游님 RESPONSIVE DESIGN */
    @media (max-width: 1200px) {
      .grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.25rem;
      }
    }

    @media (max-width: 900px) {
      .grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
    }

    @media (max-width: 600px) {
      .grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
        padding: 0
      }
      
      .section-header h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>