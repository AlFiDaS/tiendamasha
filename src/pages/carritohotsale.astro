          envioTexto = "Sin costo";
          break;
        case "Corrientes Envio a Domicilio":
          envioTexto = "A coordinar precio";
          break;
        case "Correo Argentino - Sucursal":
          envioCosto = 8500;
          envioTexto = `$${envioCosto}`;
          break;
        case "Correo Argentino - Domicilio":
          envioCosto = 10500;
          envioTexto = `$${envioCosto}`;
          break;
        default:
          envioTexto = "A coordinar precio";
