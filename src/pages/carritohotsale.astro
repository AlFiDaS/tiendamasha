      let totalConTarjeta = pago === 'tarjeta' ? Math.round(subtotal * 1.25) : subtotal;
      let totalFinal = totalConTarjeta + envioCosto;
      let descuentoTotal = preciosIndividuales[preciosIndividuales.length - 1]
      

