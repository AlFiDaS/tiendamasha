  <style>
    /* üè† INDEX PAGE STYLES */
    
    /* üì¶ PRODUCTOS SECTION */
    .productos {
      padding: var(--space-lg) 0;
      background: linear-gradient(135deg, var(--surface-light) 0%, var(--secondary) 100%);
    }
    
    .section-header {
      text-align: center;
      margin-bottom: var(--space-lg);
    }
    
    .section-header h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: var(--space-sm);
      font-family: 'Playfair Display', serif;
    }
    
    .section-header p {
      font-size: var(--font-size-lg);
      color: var(--text-secondary);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }
    
    .grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 1rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 var(--space-md);
    }
    
    .mobile-grid {
      display: none;
    }
    
    /* Asegurar que products-grid siempre sea visible y responsive */
    .products-grid {
      display: grid !important;
    }
    
    /* Para destacados con n√∫mero impar, el √∫ltimo producto se centra */
    /* NO aplicar estilos especiales en desktop - mantener grid normal */
    
         .mobile-wide {
       /* Solo se aplica en m√≥vil */
     }
     
           .mobile-wide-card {
        grid-column: span 2;
      }
      
      .mobile-wide-testimonial {
        grid-column: span 2;
      }
     
     .section-footer {
      text-align: center;
      margin-top: var(--space-xl);
    }
    
    .btn-ver-todos {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
      padding: var(--space-md) var(--space-xl);
      background: linear-gradient(135deg, #e0a4ce, #d89bc0);
      color: white;
      text-decoration: none;
      border-radius: var(--radius-lg);
      font-weight: 600;
      font-size: var(--font-size-md);
      transition: all var(--transition-normal);
      box-shadow: var(--shadow-md);
      position: relative;
      overflow: hidden;
    }
    
    .btn-ver-todos::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }
    
    .btn-ver-todos:hover {
      background: linear-gradient(135deg, #d89bc0, #e0a4ce);
      transform: translateY(-3px);
      box-shadow: var(--shadow-lg);
    }
    
    .btn-ver-todos:hover::after {
      left: 100%;
    }
    
    /* üí¨ TESTIMONIALS SECTION */
    .testimonials {
      padding: var(--space-xl) 0;
      background: linear-gradient(135deg, var(--secondary) 0%, var(--surface-light) 100%);
    }
    
         .testimonials-grid {
       display: grid;
       grid-template-columns: repeat(5, 1fr);
       gap: var(--space-sm);
       margin-top: var(--space-xl);
       max-width: 1400px;
       margin-left: auto;
       margin-right: auto;
       padding: 0 var(--space-md);
     }
    
         .testimonial-card {
       background: white;
       padding: var(--space-sm);
       border-radius: var(--radius-lg);
       box-shadow: var(--shadow-sm);
       border: 1px solid #f0f0f0;
       transition: all var(--transition-normal);
       position: relative;
       overflow: hidden;
       text-align: center;
       display: flex;
       flex-direction: column;
       min-height: 160px;
     }
    
    .testimonial-card::before {
      content: '"';
      position: absolute;
      top: -10px;
      left: 20px;
      font-size: 4rem;
      color: var(--primary-light);
      opacity: 0.3;
      font-family: 'Playfair Display', serif;
    }
    
    .testimonial-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-lg);
      border-color: var(--primary-light);
    }
    
         .stars {
       font-size: 0.7rem;
       margin-bottom: var(--space-xs);
       display: block;
     }
    
         .testimonial-text {
       font-size: var(--font-size-xs);
       color: var(--text-secondary);
       line-height: 1.3;
       margin-bottom: var(--space-sm);
       font-style: italic;
       position: relative;
       z-index: 1;
     }
    
    .client-info {
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      text-align: center;
      margin-top: auto;
    }
    
    .client-name {
      font-weight: 600;
      color: var(--text-primary);
      font-size: var(--font-size-base);
      text-align: center;
      margin-top: var(--space-sm);
    }
    
    /* üè¢ SOBRE SECTION */
    .sobre {
      padding: var(--space-xl) 0;
      background: linear-gradient(135deg, var(--surface-light) 0%, var(--secondary) 100%);
    }
    
    .sobre-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-xl);
      align-items: center;
    }
    
    .sobre-text h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin-bottom: var(--space-lg);
      font-family: 'Playfair Display', serif;
      position: relative;
    }
    
    .sobre-text h2::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 3px;
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      border-radius: 2px;
    }
    
    .sobre-text p {
      font-size: var(--font-size-lg);
      color: var(--text-secondary);
      line-height: 1.7;
      margin-bottom: var(--space-md);
    }
    
    .sobre-stats {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-sm);
      margin-top: var(--space-xl);
    }
    
    .stat {
      text-align: center;
      padding: var(--space-md);
      background: white;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-sm);
      border: 1px solid #f0f0f0;
      transition: all var(--transition-normal);
      position: relative;
      overflow: hidden;
    }
    
    .stat::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(135deg, #e0a4ce, #d89bc0);
    }
    
    .stat:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-lg);
      border-color: #e0a4ce;
    }
    
    .stat-number {
      display: block;
      font-size: 2.8rem;
      font-weight: 800;
      color: var(--primary);
      margin-bottom: var(--space-xs);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1;
    }
    
    .stat-label {
      font-size: var(--font-size-base);
      color: var(--text-primary);
      font-weight: 500;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.3;
    }
    
    .sobre-image {
      position: relative;
    }
    
    .sobre-image::before {
      content: '';
      position: absolute;
      top: -20px;
      left: -20px;
      right: 20px;
      bottom: 20px;
      background: linear-gradient(135deg, var(--primary-light), var(--primary));
      border-radius: var(--radius-lg);
      z-index: -1;
      opacity: 0.3;
    }
    
    .sobre-image img {
      width: 100%;
      height: 450px;
      object-fit: cover;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-lg);
      transition: all var(--transition-normal);
      border: 4px solid white;
    }
    
    .sobre-image img:hover {
      transform: scale(1.03) rotate(1deg);
      box-shadow: var(--shadow-lg), 0 20px 40px rgba(224, 164, 206, 0.3);
    }
    

    
                             /* üéØ CTA SECTION */
             .cta {
         padding: var(--space-xl) 0;
         background: linear-gradient(135deg, #1a0b2e 0%, #2d1b4e 50%, #4a2c7a 100%);
         position: relative;
         overflow: hidden;
       }
       
       .cta::before {
         content: '';
         position: absolute;
         top: 0;
         left: 0;
         right: 0;
         bottom: 0;
         background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="stars" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="15" cy="15" r="0.8" fill="%23e0a4ce" opacity="0.8"/><circle cx="85" cy="25" r="0.6" fill="%23e0a4ce" opacity="0.6"/><circle cx="45" cy="45" r="0.4" fill="%23e0a4ce" opacity="0.9"/><circle cx="75" cy="75" r="0.7" fill="%23e0a4ce" opacity="0.7"/><circle cx="25" cy="85" r="0.5" fill="%23e0a4ce" opacity="0.8"/><circle cx="65" cy="15" r="0.3" fill="%23e0a4ce" opacity="0.6"/><circle cx="35" cy="65" r="0.6" fill="%23e0a4ce" opacity="0.7"/><circle cx="95" cy="55" r="0.4" fill="%23e0a4ce" opacity="0.8"/><circle cx="5" cy="35" r="0.5" fill="%23e0a4ce" opacity="0.6"/><circle cx="55" cy="95" r="0.3" fill="%23e0a4ce" opacity="0.9"/></pattern></defs><rect width="100" height="100" fill="url(%23stars)"/></svg>');
         opacity: 0.8;
       }
      
      .cta .container {
        position: relative;
        z-index: 1;
      }
      
      .cta-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: var(--space-xl);
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--space-md);
      }
      
      .cta-text {
        flex: 1;
        text-align: left;
      }
      
      .cta-badge {
        display: inline-block;
        background: linear-gradient(135deg, #ff6b9d, #c44569);
        color: white;
        padding: var(--space-xs) var(--space-sm);
        border-radius: var(--radius-lg);
        font-size: var(--font-size-sm);
        font-weight: 600;
        margin-bottom: var(--space-md);
        box-shadow: var(--shadow-sm);
        animation: pulse 2s infinite;
      }
      
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
      
             .cta-text h2 {
         font-size: 2.5rem;
         font-weight: 700;
         margin-bottom: var(--space-md);
         font-family: 'Playfair Display', serif;
         color: white;
         background: linear-gradient(135deg, #ffffff, #e0a4ce);
         -webkit-background-clip: text;
         -webkit-text-fill-color: transparent;
         background-clip: text;
       }
       
               .cta-text p {
          font-size: var(--font-size-md);
          color: rgba(255, 255, 255, 0.9);
          line-height: 1.7;
          margin-bottom: var(--space-lg);
        }
      
      .cta-features {
        display: flex;
        gap: var(--space-md);
        margin-bottom: var(--space-lg);
      }
      
             .feature {
         display: flex;
         align-items: center;
         gap: var(--space-xs);
         background: rgba(255, 255, 255, 0.1);
         padding: var(--space-sm) var(--space-md);
         border-radius: var(--radius-lg);
         box-shadow: var(--shadow-sm);
         border: 1px solid rgba(224, 164, 206, 0.3);
         transition: all var(--transition-normal);
         backdrop-filter: blur(10px);
       }
      
      .feature:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
        border-color: var(--primary-light);
      }
      
      .feature-icon {
        font-size: 1.2rem;
      }
      
             .feature span:last-child {
         font-size: var(--font-size-sm);
         font-weight: 500;
         color: white;
       }
      
      .cta-visual {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-lg);
      }
      
      .cta-image {
        position: relative;
        width: 300px;
        height: 200px;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        transition: all var(--transition-normal);
      }
      
      .cta-image:hover {
        transform: scale(1.05) rotate(2deg);
        box-shadow: var(--shadow-lg), 0 20px 40px rgba(224, 164, 206, 0.3);
      }
      
             .cta-image .image-link {
         display: block;
         width: 100%;
         height: 100%;
         text-decoration: none;
         color: inherit;
       }
       
       .cta-image img {
         width: 100%;
         height: 100%;
         object-fit: cover;
       }
      
      .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(224, 164, 206, 0.9), rgba(216, 155, 192, 0.9));
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all var(--transition-normal);
      }
      
      .cta-image:hover .image-overlay {
        opacity: 1;
      }
      
      .overlay-content {
        text-align: center;
        color: white;
      }
      
      .overlay-text {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: var(--space-xs);
      }
      
      .overlay-subtext {
        display: block;
        font-size: var(--font-size-sm);
        opacity: 0.9;
      }
      
      .cta-button {
        text-align: center;
      }
    
                                       .btn-primary {
         background: linear-gradient(135deg, #e0a4ce, #d89bc0);
         color: white;
         box-shadow: var(--shadow-md);
         position: relative;
         overflow: hidden;
         padding: var(--space-md) var(--space-xl);
         border: none;
         border-radius: var(--radius-lg);
         font-weight: 600;
         font-size: var(--font-size-md);
         text-decoration: none;
         transition: all var(--transition-normal);
         display: inline-flex;
         align-items: center;
         gap: var(--space-sm);
       }
     
     .btn-primary::after {
       content: '';
       position: absolute;
       top: 0;
       left: -100%;
       width: 100%;
       height: 100%;
       background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
       transition: left 0.5s;
     }
     
                    .btn-primary:hover {
         background: linear-gradient(135deg, #d89bc0, #e0a4ce);
         transform: translateY(-3px);
         box-shadow: var(--shadow-lg);
       }
     
     .btn-primary:hover::after {
       left: 100%;
     }
    
    .btn-secondary {
      background: transparent;
      color: #e0a4ce;
      border: 2px solid #e0a4ce;
      position: relative;
      overflow: hidden;
      padding: var(--space-md) var(--space-xl);
      border-radius: var(--radius-lg);
      font-weight: 600;
      font-size: var(--font-size-md);
      text-decoration: none;
      transition: all var(--transition-normal);
    }
    
    .btn-secondary::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(224, 164, 206, 0.2), transparent);
      transition: left 0.5s;
    }
    
    .btn-secondary:hover {
      background: #e0a4ce;
      color: white;
      transform: translateY(-3px);
    }
    
    .btn-secondary:hover::after {
      left: 100%;
    }
    
    /* üì± RESPONSIVE DESIGN */
         @media (max-width: 1200px) {
       .grid:not(.products-grid) {
         grid-template-columns: repeat(4, 1fr);
       }
       
       .products-grid {
         grid-template-columns: repeat(4, 1fr);
       }
       
       .testimonials-grid {
         grid-template-columns: repeat(5, 1fr);
         max-width: 100%;
         padding: 0 var(--space-md);
         gap: var(--space-xs);
       }
     }
    
    @media (max-width: 900px) {
      .grid:not(.products-grid) {
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
      }
      
      .products-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
      }
      
      .section-header h2 {
        font-size: 2rem;
      }
      
      .sobre-content {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }
      
      .sobre-text h2 {
