<script>
      // Cargar datos de la landing page desde la API
      async function loadLandingPageData() {
        try {
          const response = await fetch('/api/landing-page.php');
          const data = await response.json();
          
          // Cargar carrusel
          if (data.carousel && data.carousel.length > 0) {
            const carouselList = document.getElementById('carousel-list');
            if (carouselList) {
              carouselList.innerHTML = data.carousel.map(item => {
                const link = item.link ? `href="${item.link}"` : '';
                const linkTag = item.link ? '<a ' + link + '>' : '';
                const linkClose = item.link ? '</a>' : '';
                return `
                  <li class="splide__slide">
                    ${linkTag}
                      <img src="${item.image}" alt="Carrusel" width="1920" height="1080" loading="lazy" decoding="async" />
                    ${linkClose}
                  </li>
                `;
              }).join('');
              
              // Reinicializar el slider despu√©s de un peque√±o delay para asegurar que las im√°genes se cargaron
              setTimeout(() => {
                if (typeof Splide !== 'undefined') {
                  // Destruir slider existente si hay uno
                  const existingSlider = document.getElementById('hero-slider');
                  if (existingSlider && existingSlider.splide) {
                    existingSlider.splide.destroy();
                  }
                  
                  new Splide('#hero-slider', {
                    type: 'fade',
                    autoplay: true,
                    interval: 4000,
                    rewind: true,
                    arrows: true,
                    pagination: true
                  }).mount();
                }
              }, 100);
            }
          }
          
          // Cargar secci√≥n Sobre
          if (data.sobre) {
            const sobre = data.sobre;
            if (document.getElementById('sobre-title')) document.getElementById('sobre-title').textContent = sobre.title;
            if (document.getElementById('sobre-text-1')) document.getElementById('sobre-text-1').textContent = sobre.text_1;
            if (document.getElementById('sobre-text-2')) document.getElementById('sobre-text-2').textContent = sobre.text_2;
            if (document.getElementById('sobre-image') && sobre.image) {
              document.getElementById('sobre-image').src = sobre.image;
            }
            if (sobre.stats && sobre.stats.length > 0) {
              // Filtrar estad√≠sticas v√°lidas (que tengan n√∫mero y label)
              const validStats = sobre.stats.filter(stat => 
                stat && stat.number && stat.number.trim() !== '' && stat.label && stat.label.trim() !== ''
              );
              
              // Ocultar todas las estad√≠sticas primero
              const stat1Container = document.getElementById('sobre-stat-1-number')?.closest('.stat');
              const stat2Container = document.getElementById('sobre-stat-2-number')?.closest('.stat');
              const stat3Container = document.getElementById('sobre-stat-3-number')?.closest('.stat');
              
              if (stat1Container) stat1Container.style.display = 'none';
              if (stat2Container) stat2Container.style.display = 'none';
              if (stat3Container) stat3Container.style.display = 'none';
              
              // Mostrar solo las estad√≠sticas v√°lidas
              validStats.forEach((stat, index) => {
                if (index >= 3) return; // Solo hay 3 contenedores
                
                const statNumberEl = document.getElementById(`sobre-stat-${index + 1}-number`);
                const statLabelEl = document.getElementById(`sobre-stat-${index + 1}-label`);
                const statContainer = statNumberEl?.closest('.stat');
                
                if (statNumberEl && statLabelEl && statContainer) {
                  statNumberEl.textContent = stat.number;
                  statLabelEl.textContent = stat.label;
                  
                  // Si el n√∫mero tiene m√°s de 5 caracteres, reducir tama√±o
                  if (stat.number && stat.number.length > 5) {
                    statNumberEl.setAttribute('data-long', 'true');
                  } else {
                    statNumberEl.removeAttribute('data-long');
                  }
                  
                  statContainer.style.display = 'block';
                }
              });
              
              // Ajustar el grid seg√∫n la cantidad de estad√≠sticas v√°lidas
              const statsContainer = document.querySelector('.sobre-stats');
              if (statsContainer && validStats.length > 0) {
                statsContainer.style.gridTemplateColumns = `repeat(${validStats.length}, 1fr)`;
              }
            }
          }
          
          // Cargar comentarios
          if (data.testimonials) {
            const testimonials = data.testimonials;
            if (testimonials.visible && testimonials.items && testimonials.items.length > 0) {
              const testimonialsSection = document.getElementById('testimonials-section');
              const testimonialsGrid = document.getElementById('testimonials-grid');
              
              if (testimonialsSection) testimonialsSection.style.display = 'block';
              
              if (testimonialsGrid) {
                const count = Math.min(testimonials.items.length, 5); // M√°ximo 5
                testimonialsGrid.setAttribute('data-count', count);
                testimonialsGrid.innerHTML = testimonials.items.slice(0, 5).map((item, index) => {
                  return `
                    <div class="testimonial-card">
                      <div class="stars">${item.stars || '‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê'}</div>
                      <p class="testimonial-text">"${item.text}"</p>
                      <div class="client-info">
                        <span class="client-name">${item.client_name}</span>
                      </div>
                    </div>
                  `;
                }).join('');
              }
            } else {
              const testimonialsSection = document.getElementById('testimonials-section');
              if (testimonialsSection) testimonialsSection.style.display = 'none';
            }
          }
          
          // Cargar Galer√≠a de Ideas
          if (data.galeria) {
            const galeria = data.galeria;
            if (galeria.visible) {
              const galeriaSection = document.getElementById('galeria-section');
              if (galeriaSection) galeriaSection.style.display = 'block';
              
              if (document.getElementById('galeria-badge')) document.getElementById('galeria-badge').textContent = galeria.badge || '‚ú® Inspiraci√≥n';
              if (document.getElementById('galeria-title')) document.getElementById('galeria-title').textContent = galeria.title;
              if (document.getElementById('galeria-description')) document.getElementById('galeria-description').textContent = galeria.description;
              if (document.getElementById('galeria-image') && galeria.image) {
                document.getElementById('galeria-image').src = galeria.image;
              }
              if (document.getElementById('galeria-link') && galeria.link) {
                document.getElementById('galeria-link').href = galeria.link;
              }
              if (document.getElementById('galeria-button-link') && galeria.link) {
                document.getElementById('galeria-button-link').href = galeria.link;
              }
              if (document.getElementById('galeria-button-text')) {
                document.getElementById('galeria-button-text').textContent = galeria.button_text || 'Galeria de ideas';
              }
              
              // Actualizar features (botones)
              if (galeria.features && galeria.features.length > 0) {
                const featuresContainer = document.getElementById('galeria-features');
                if (featuresContainer) {
                  featuresContainer.innerHTML = galeria.features.map(feature => `
                    <div class="feature">
                      <span class="feature-icon">${feature.icon || '‚ú®'}</span>
                      <span class="feature-text">${feature.text || ''}</span>
                    </div>
                  `).join('');
                }
              } else {
                // Si no hay features, ocultar el contenedor
                const featuresContainer = document.getElementById('galeria-features');
                if (featuresContainer) {
                  featuresContainer.style.display = 'none';
                }
              }
            } else {
              const galeriaSection = document.getElementById('galeria-section');
              if (galeriaSection) galeriaSection.style.display = 'none';
            }
          }
        } catch (error) {
          console.error('Error al cargar datos de landing page:', error);
        }
      }
      
      // Cargar cuando el DOM est√© listo
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', loadLandingPageData);
      } else {
        loadLandingPageData();
      }
    </script>

