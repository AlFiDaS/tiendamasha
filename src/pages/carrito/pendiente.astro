---
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Icon from '../../components/Icon.astro';
---

<Layout>
  <div class="pagina-carrito">
    <Breadcrumb items={[
      { text: "Inicio", href: "/" },
      { text: "Carrito", href: "/carrito" },
      { text: "Pago Pendiente" }
    ]} />

    <section class="carrito">
      <div class="container">
        <div class="carrito-header" style="text-align: center;">
          <h1 style="color: #ffc107; font-size: 2.5rem; margin-bottom: 1rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem;"><Icon name="check" size={32} /> Pago a Confirmar</h1>
          <p id="order-id-display" style="font-size: 1.5rem; color: #333; font-weight: 600; margin-bottom: 1rem; display: none;">
            Pedido #<span id="order-id-number"></span>
          </p>
          <p style="font-size: 1.2rem; color: #666; margin-bottom: 2rem;">
            ¡Gracias por tu pedido! Hemos recibido tu comprobante de pago y está <strong>pendiente de confirmación</strong>.
          </p>
        </div>

        <div style="max-width: 600px; margin: 0 auto; background: #f8f9fa; padding: 2rem; border-radius: 8px;">
          <h2 style="margin-bottom: 1rem;">Información importante:</h2>
          <ul style="line-height: 2; color: #333;">
            <li>Revisaremos tu comprobante de pago.</li>
            <li>En los próximos minutos nos comunicaremos con usted por WhatsApp para avisarle la confirmación de su pedido.</li>
            <li>Una vez confirmado, te contactaremos para coordinar el envío.</li>
            <li>Si tienes dudas, puedes contactarnos por WhatsApp.</li>
          </ul>

          <div id="buttons-container" style="margin-top: 2rem; text-align: center; display: flex; flex-direction: column; gap: 1rem; align-items: center;">
            <a href="/" class="btn btn-primary" style="display: inline-block; padding: 1rem 2rem; background: #007bff; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
              Volver al inicio
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script is:inline>
    // Obtener datos de la tienda (WhatsApp y nombre) para el enlace
    async function getShopData() {
      try {
        const sk = 'shop_settings' + (window.__STORE_BASE || '');
        const cached = localStorage.getItem(sk);
        if (cached) {
          const s = JSON.parse(cached);
          const shop = (s && s.data) ? s.data : s;
          if (shop && shop.whatsapp_number) return shop;
        }
        const res = await fetch('/api/shop.php');
        const data = await res.json();
        if (data.success && data.shop) {
          localStorage.setItem(sk, JSON.stringify(data.shop));
          return data.shop;
        }
      } catch (e) { console.warn('Error al cargar tienda:', e); }
      return null;
    }

    function buildWhatsAppUrl(shop, orderId) {
      if (!shop || !shop.whatsapp_number) return null;
      const phone = (shop.whatsapp_number + '').replace(/\D/g, '');
      const name = shop.shop_name || 'Tienda';
      const text = 'Hola ' + name + ', mi pedido es el #' + orderId + '.';
      return 'https://wa.me/' + phone + '?text=' + encodeURIComponent(text);
    }

    function createWhatsAppButton(url) {
      const btn = document.createElement('a');
      btn.href = url;
      btn.target = '_blank';
      btn.rel = 'noopener noreferrer';
      btn.className = 'btn btn-whatsapp';
      btn.style.cssText = 'display: inline-flex; align-items: center; gap: 0.5rem; padding: 1rem 2rem; background: linear-gradient(135deg, #25d366, #1ed760); color: white; text-decoration: none; border-radius: 4px; font-weight: bold; transition: all 0.3s ease;';
      btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>Contactanos por WhatsApp';
      return btn;
    }

    async function initOrderIdDisplay() {
      const urlParams = new URLSearchParams(window.location.search);
      let currentOrderId = urlParams.get('order_id');
      const preferenceId = urlParams.get('preference_id');
      const shop = await getShopData();

      function updateWhatsAppBtn(orderId) {
        if (!orderId || !shop) return;
        const url = buildWhatsAppUrl(shop, orderId);
        if (!url) return;
        const buttonsContainer = document.getElementById('buttons-container');
        if (!buttonsContainer) return;
        let whatsappBtn = buttonsContainer.querySelector('.btn-whatsapp');
        if (!whatsappBtn) {
          whatsappBtn = createWhatsAppButton(url);
          whatsappBtn.href = url;
          buttonsContainer.appendChild(whatsappBtn);
        } else {
          whatsappBtn.href = url;
        }
      }

      if (currentOrderId) {
        const orderIdDisplay = document.getElementById('order-id-display');
        const orderIdNumber = document.getElementById('order-id-number');
        if (orderIdDisplay && orderIdNumber) {
          orderIdNumber.textContent = currentOrderId;
          orderIdDisplay.style.display = 'block';
        }
        updateWhatsAppBtn(currentOrderId);
      }

      if (!currentOrderId && preferenceId) {
        fetch('/api/orders/get-order-id.php?preference_id=' + encodeURIComponent(preferenceId))
          .then(function(res) { return res.json(); })
          .then(function(data) {
            if (data.success && data.order_id) {
              currentOrderId = data.order_id;
              const orderIdDisplay = document.getElementById('order-id-display');
              const orderIdNumber = document.getElementById('order-id-number');
              if (orderIdDisplay && orderIdNumber) {
                orderIdNumber.textContent = data.order_id;
                orderIdDisplay.style.display = 'block';
              }
              updateWhatsAppBtn(data.order_id);
            }
          })
          .catch(function(err) { console.error('Error al obtener order_id:', err); });
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initOrderIdDisplay);
    } else {
      initOrderIdDisplay();
    }
  </script>
</Layout>
