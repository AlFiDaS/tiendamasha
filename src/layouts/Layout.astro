    <script src="/js/galeria-loader.js?v=2.1.10-2026-01-03T17-30-00" defer></script>
    
    <!-- üîÑ SCRIPTS NO CR√çTICOS - Cargar despu√©s del renderizado -->
    <script>
      // @ts-nocheck
      // Polyfill para requestIdleCallback
      if (!window.requestIdleCallback) {
        window.requestIdleCallback = function(cb) {
          return setTimeout(cb, 1);
        };
      }
      
      // Service Worker - Cargar despu√©s del renderizado
      if ('serviceWorker' in navigator) {
        requestIdleCallback(() => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        }, { timeout: 2000 });
      }
      
      // PWA Install Prompt - Cargar despu√©s del renderizado
      let deferredPrompt;
      window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
      });
      
      // Scroll restoration - Solo si es necesario
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
      
      // Cargar configuraci√≥n de la tienda y actualizar t√≠tulo y meta description (actualizar cache)
      async function loadShopSettings() {
        try {
          const response = await fetch('/api/shop.php');
          const data = await response.json();
          
          if (data.success && data.shop) {
            // Actualizar cache
            localStorage.setItem('shop_settings', JSON.stringify({
              timestamp: Date.now(),
              data: data.shop
            }));
            
            // Actualizar t√≠tulo con el nombre de la tienda
            if (data.shop.shop_name) {
              document.title = data.shop.shop_name;
            }
            
            // Actualizar meta description con la descripci√≥n de la tienda
            if (data.shop.description) {
              let metaDescription = document.querySelector('meta[name="description"]') as HTMLMetaElement;
              if (!metaDescription) {
                metaDescription = document.createElement('meta');
                metaDescription.name = 'description';
                document.head.appendChild(metaDescription);
              }
              metaDescription.content = data.shop.description;
              
              // Tambi√©n actualizar Open Graph y Twitter Card
              let ogDescription = document.querySelector('meta[property="og:description"]') as HTMLMetaElement;
              if (ogDescription) {
                ogDescription.content = data.shop.description;
              }
              
              let twitterDescription = document.querySelector('meta[name="twitter:description"]') as HTMLMetaElement;
              if (twitterDescription) {
                twitterDescription.content = data.shop.description;
              }
            }
          }
        } catch (error) {
          console.error('Error al cargar configuraci√≥n de tienda:', error);
        }
      }
      
      // Cargar colores de la landing page y aplicarlos (actualizar cache)
      async function loadColors() {
        try {
          const response = await fetch('/api/landing-page.php');
          const data = await response.json();
          
          if (data.colors) {
            // Actualizar cache
            localStorage.setItem('landing_colors', JSON.stringify({
              timestamp: Date.now(),
              data: data
            }));
            
            const primaryColorLight = data.colors.primary_light || '#ff8c00';
            const primaryColorDark = data.colors.primary_dark || '#ff8c00';
            
            // Actualizar variables CSS
            const root = document.documentElement;
            root.style.setProperty('--primary', primaryColorLight);
            root.style.setProperty('--primary-color', primaryColorLight); // Para compatibilidad
            
            // Actualizar theme-color meta tag
            const themeColorMeta = document.getElementById('theme-color-meta');
            if (themeColorMeta) {
              themeColorMeta.setAttribute('content', primaryColorLight);
            }
            
            // Calcular variantes del color primario
            /**
             * @param {string} hex
             * @returns {{r: number, g: number, b: number} | null}
             */
            function hexToRgb(hex) {
              const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
              return result ? {
                r: parseInt(result[1], 16),
                g: parseInt(result[2], 16),
                b: parseInt(result[3], 16)
              } : null;
            }
            
            /**
             * @param {number} r
             * @param {number} g
             * @param {number} b
             * @returns {string}
             */
            function rgbToHex(r, g, b) {
              return "#" + [r, g, b].map(x => {
                const hex = x.toString(16);
                return hex.length === 1 ? "0" + hex : hex;
              }).join("");
            }
            
            // Crear versiones m√°s oscuras y claras
            const rgb = hexToRgb(primaryColorLight);
            if (rgb) {
              // Versi√≥n m√°s oscura (para hover)
              const darker = {
                r: Math.max(0, Math.floor(rgb.r * 0.85)),
                g: Math.max(0, Math.floor(rgb.g * 0.85)),
                b: Math.max(0, Math.floor(rgb.b * 0.85))
              };
              root.style.setProperty('--primary-dark', rgbToHex(darker.r, darker.g, darker.b));
              
              // Versi√≥n m√°s clara (para fondos suaves)
              const lighter = {
                r: Math.min(255, Math.floor(rgb.r + (255 - rgb.r) * 0.4)),
                g: Math.min(255, Math.floor(rgb.g + (255 - rgb.g) * 0.4)),
                b: Math.min(255, Math.floor(rgb.b + (255 - rgb.b) * 0.4))
              };
              root.style.setProperty('--primary-light', rgbToHex(lighter.r, lighter.g, lighter.b));
              
              // Actualizar gradientes
              root.style.setProperty('--primary-gradient', `linear-gradient(135deg, ${primaryColorLight}, ${rgbToHex(lighter.r, lighter.g, lighter.b)})`);
              root.style.setProperty('--primary-gradient-dark', `linear-gradient(135deg, ${rgbToHex(darker.r, darker.g, darker.b)}, ${primaryColorLight})`);
            }
          }
        } catch (error) {
          console.error('Error al cargar colores:', error);
        }
      }
      
      // Cargar configuraci√≥n al iniciar
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          loadShopSettings();
          loadColors();
        });
      } else {
        loadShopSettings();
        loadColors();
      }
    </script>
  </body>
