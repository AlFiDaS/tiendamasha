---
export interface Props {
  name: string;
  price: string;
  image: string;
  hoverImage?: string;
  slug: string;
  categoria: string;
  stock?: boolean;
  productId?: string;
}

const { name, price, image, hoverImage, slug, categoria, stock = true, productId = slug } = Astro.props;

// üñºÔ∏è VALIDACI√ìN DE IM√ÅGENES (ARREGLADA)
const hasValidImage = image && image !== '';
const hasValidHover = hoverImage && hoverImage !== '';
const displayImage = hasValidImage ? image : '/images/placeholder.svg';
const displayHover = hasValidHover ? hoverImage : displayImage;

// El precio que viene de la BD es de transferencia
// Calcular precio de tarjeta para mostrar (principal) y precio de transferencia (secundario)
// El precio de tarjeta se redondea al 100 m√°s cercano
let cardPriceFormatted = null;
let transferPriceFormatted = null;
const priceMatch = price.match(/\$?(\d+)/);
if (priceMatch) {
  const transferPrice = parseInt(priceMatch[1], 10);
  const cardPrice = Math.round((transferPrice * 1.25) / 100) * 100;
  cardPriceFormatted = '$' + cardPrice.toLocaleString('es-AR');
  transferPriceFormatted = '$' + transferPrice.toLocaleString('es-AR');
}
---

<div class="product-card">
  <div class="image-container">
    <a href={`/${categoria}/${slug}`} class="card-link">
      <!-- üñºÔ∏è IMAGEN CON VALIDACI√ìN Y HOVER EFFECT -->
      <img
        src={displayImage}
        alt={`${name} - Lume Velas Artesanales`}
        class="imagen-con-transicion"
        width="400"
        height="400"
        loading="eager"
        decoding="sync"
        fetchpriority="high"
        style="opacity: 1; visibility: visible; display: block;"
        {...(hasValidHover ? {
          onmouseover: `this.src='${displayHover}'`,
          onmouseout: `this.src='${displayImage}'`
        } : {})}
        onload="this.style.opacity='1'; this.style.visibility='visible'; this.classList.add('loaded');"
        onerror="this.onerror=null; this.src='/images/placeholder.svg';"
      />
    </a>
    
    <!-- ‚ù§Ô∏è BOT√ìN DE WISHLIST -->
    <button 
      class="wishlist-btn" 
      data-wishlist-id={productId}
      onclick={`event.preventDefault(); event.stopPropagation(); toggleWishlist('${productId}'); return false;`}
      title="Agregar a favoritos"
      aria-label="Agregar a favoritos"
    >
      ü§ç
    </button>
    
    <!-- üè∑Ô∏è BADGE DE STOCK -->
    {!stock && (
      <div class="sin-stock">
        Sin stock
      </div>
    )}
  </div>
  
  <div class="info">
    <h3>{name}</h3>
    <div class="price-container">
      {transferPriceFormatted ? (
        <>
          <p class="price">{transferPriceFormatted}</p>
          {cardPriceFormatted && (
            <p class="price-card">
              <span class="price-label">Mercado Pago / Tarjeta:</span> {cardPriceFormatted}
            </p>
          )}
          <p class="price-card-text">hasta en 3 cuotas</p>
        </>
      ) : (
        <p class="price">N/A</p>
      )}
    </div>
    <!-- Guardar el precio de transferencia original en el carrito (no el precio de tarjeta) -->
    <!-- Esto permite calcular correctamente los descuentos sin errores de redondeo -->
    <button 
      class="btn-agregar" 
      onclick={`agregarAlCarrito('${name}', '${price}', '${displayImage}', '${slug}', '${categoria}')`}
      disabled={!stock}
    >
      {stock ? 'Agregar al carrito' : 'Sin stock'}
    </button>
  </div>
</div>

