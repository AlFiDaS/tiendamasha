---
interface Props {
  items: Array<{
    text: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<div class="breadcrumb">
  <div class="container">
    {items.map((item, index) => (
      <>
        {item.href ? (
          <a href={item.href}>{item.text}</a>
        ) : (
          <span class="current">{item.text}</span>
        )}
        {index < items.length - 1 && <span class="separator">/</span>}
      </>
    ))}
  </div>
</div>

